<header id="header-id">
    <div id="gg-header">
        <div id="left-logo">
            <h1 id="main-header-logo">G & G</h1>
        </div>

        <% if (user) { %>

            <% if (user.account === "grocer") { %>
            
                <div id="right-site-menu">
                    <a class="phone-hidden" href="/market/signed-in">Marketplace</a>
                    <a href="/groceries/home">Home</a>
                    <a class="phone-hidden" href="/auth/sign-out">Sign Out</a>
                    <a href="https://github.com/realpolya">Creator</a>
                </div>
    
            <% } else if (user.account === "shopper") { %>
                
                <div id="right-site-menu">
                    <a class="phone-hidden" href="/market/signed-in">Marketplace</a>
                    <a class="phone-hidden" href="/cart">Cart</a>
                    <a href="/shop">Home</a>
                    <a class="phone-hidden" href="/auth/sign-out">Sign Out</a>
                    <a href="https://github.com/realpolya">Creator</a>
                </div>

            <%  } %>
        
        <% } else { %>

            <div id="right-site-menu">
                <a href="/market">Marketplace</a>
                <a class="phone-hidden" href="/auth/sign-in">Sign In</a>
                <a class="phone-hidden" href="/auth/sign-up">Sign Up</a>
                <a href="https://github.com/realpolya">Creator</a>
            </div>
            
        <% } %>
    </div>
</header>